<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14171B"
    android:windowSoftInputMode="adjustNothing"
    tools:context=".fragments.AddingListing">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goBack"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:background="@drawable/back_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,VisualLintOverlap" />

    <EditText
        android:id="@+id/titleInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bordershapewhite"
        android:ems="10"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textColorHint="#510303"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textView20"
        app:layout_constraintEnd_toEndOf="@+id/CIty"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView19"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,DuplicateClickableBoundsCheck" />

    <Spinner
        android:id="@+id/Wilaya"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bordershapewhite"
        android:entries="@array/Wilayas"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toTopOf="@+id/textView22"
        app:layout_constraintEnd_toStartOf="@+id/CIty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21"
        app:layout_constraintVertical_bias="0.137" />

    <EditText
        android:id="@+id/CIty"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bordershapewhite"
        android:ems="10"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textView22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Wilaya"
        app:layout_constraintTop_toBottomOf="@+id/textView21"
        app:layout_constraintVertical_bias="0.137"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:fontFamily="@font/poppinsextrabold"
        android:text="@string/add_a_title"
        android:textColor="#F41473"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/titleInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.864" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppinsextrabold"
        android:text="@string/add_a_location"
        android:textColor="#F41473"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/Wilaya"
        app:layout_constraintTop_toBottomOf="@+id/PhoneInput" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="375dp"
        android:fontFamily="@font/poppinsextrabold"
        android:text="@string/add_a_phone_number"
        android:textColor="#F41473"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/galleryButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goBack"
        app:layout_constraintVertical_bias="0.881" />

    <EditText
        android:id="@+id/PhoneInput"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="292dp"
        android:layout_marginBottom="352dp"
        android:background="@drawable/bordershapewhite"
        android:ems="10"
        android:inputType="number"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textColorHint="#510303"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/firstImage"
        app:layout_constraintEnd_toEndOf="@+id/Discreption"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView21"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TextFields,TouchTargetSizeCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_btn"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="4dp"
        android:background="#0014171B"
        android:elevation="5dp"
        android:fontFamily="@font/poppinsextrabold"
        android:text="Add"
        android:textColor="@color/secondary"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SecondImage"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck,DuplicateClickableBoundsCheck,TextSizeCheck" />

    <EditText
        android:id="@+id/Discreption"
        android:layout_width="309dp"
        android:layout_height="81dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/bordershapewhite"
        android:ems="10"
        android:inputType="text"
        android:paddingBottom="45dp"
        android:textColor="@color/black"
        android:textColorHint="#510303"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/galleryButton"
        app:layout_constraintStart_toStartOf="@+id/textView22"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/poppinsextrabold"
        android:text="@string/add_a_discription"
        android:textColor="#F41473"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/Discreption"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextSizeCheck" />


    <ImageView
        android:id="@+id/SecondImage"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="149dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/firstImage"
        app:layout_constraintTop_toBottomOf="@+id/Discreption" />

    <ImageView
        android:id="@+id/thirdImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="196dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/SecondImage"
        app:layout_constraintTop_toBottomOf="@+id/Discreption"
        app:layout_constraintVertical_bias="0.222" />

    <ImageView
        android:id="@+id/firstImage"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="266dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/SecondImage"
        app:layout_constraintStart_toEndOf="@+id/galleryButton"
        app:layout_constraintTop_toBottomOf="@+id/PhoneInput" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/galleryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="43dp"
        android:background="@drawable/icon___photo_library"
        android:clickable="true"
        android:src="@drawable/icon___photo_library"
        app:backgroundTint="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/firstImage"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.719"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>
