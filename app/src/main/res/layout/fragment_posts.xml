<?xml version="1.0" encoding="utf-8"?>



<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14171B">



    <FrameLayout




        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#14171B"
        tools:context=".fragments.postsFragment">




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/goBack"
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:background="@drawable/back_arrow"


            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,VisualLintOverlap" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/showingPostimages"
            android:layout_width="match_parent"
            android:layout_height="444dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="400dp">


            <TextView
                android:id="@+id/titleinpage"
                android:layout_width="408dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="3dp"
                android:layout_marginTop="47dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="361dp"

                android:fontFamily="@font/poppinsextrabold"

                android:text="laoding"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="411dp"
                android:layout_height="63dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-1dp"
                android:layout_marginTop="94dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="286dp"
                android:background="@drawable/bordershapeforprofile"
                android:elevation="2dp"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="67dp"
                    android:layout_height="63dp"

                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/pdpinpage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"

                        />
                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/usernameinpage"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"

                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppinsextrabolitalic"
                    android:text="laoding"
                    android:textColor="@color/white"
                    android:textSize="17sp" />


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="281dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="162dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:scrollbarStyle="insideInset"
                app:cardBackgroundColor="#131920"

                app:cardCornerRadius="10dp">


                <TextView
                    android:id="@+id/loactioninpage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"


                    android:fontFamily="@font/poppinsemibold"
                    android:padding="5dp"
                    android:text="laoding"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/cityinpage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="50dp"

                    android:fontFamily="@font/poppinsemibold"
                    android:padding="5dp"
                    android:text="laoding"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/phoneinpage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="100dp"

                    android:fontFamily="@font/poppinsemibold"
                    android:padding="5dp"
                    android:text="laoding"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/descinpage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="160dp"
                    android:fontFamily="@font/poppinsemibold"
                    android:padding="5dp"
                    android:scrollbars="vertical"
                    android:text="laoding"

                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />


            </androidx.cardview.widget.CardView>


        </RelativeLayout>


    </FrameLayout>
























</ScrollView>
